{
  "name": "simple-node-app",
  "version": "1.0.0",
  "description": "The simple Node app",
  "main": "./dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "prod": "node ./dist/main.js",
    "dev": "npx nodemon",
    "dev:inspect": "npx nodemon -e ts,json --exec node --inspect=localhost:9229 -r ts-node/register src/main.ts",
    "test:unit": "jest --runInBand --detectOpenHandles --colors --config jest.config.ts",
    "test:e2e": "jest --runInBand --colors --config jest.e2e.config.ts",
    "lint": "eslint ./src/**",
    "lint:fix": "eslint ./src/** --fix",
    "check-updates": "npx npm-check-updates",
    "update-packages": "npx npm-check-updates -u",
    "generate": "npx prisma generate"
  },
  "keywords": [
    "node"
  ],
  "author": "Ilya Kirsanov",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "tslog": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.6.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "npm-check-updates": "^16.0.0",
    "prisma": "^4.1.0",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1"
  }
}
